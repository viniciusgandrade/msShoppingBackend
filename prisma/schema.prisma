// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id     String   @id @default(cuid())
  name   String
  price  Int
  imgUrl String
  sizes  String[]

  categorie    Categories @relation(fields: [categoriesId], references: [id])
  categoriesId String
}

model Categories {
  id   String @id @default(cuid())
  type String
  Sex  String

  Product Product[]
}
